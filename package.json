{
  "name": "tintly",
  "version": "1.0.0",
  "description": "A complete theme generator with backend API and frontend UI",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd server && bun run dev",
    "dev:frontend": "cd tintly-client && bun run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd server && bun install && bun run build",
    "build:frontend": "cd tintly-client && bun install && bun run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd server && bun run start",
    "start:frontend": "cd tintly-client && bun run start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "test": "npm run test:backend",
    "test:backend": "cd server && bun run test",
    "install:all": "cd server && bun install && cd ../tintly-client && bun install",
    "clean": "docker-compose down && docker system prune -f"
  },
  "keywords": [
    "theme",
    "generator",
    "shadcn",
    "tailwind",
    "react",
    "nextjs",
    "express",
    "api"
  ],
  "author": "Tintly Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
